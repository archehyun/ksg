		)values(
			#port_name#,
			#port_abbr#
		);
	</insert>
	
<!-- update -->
	
	<update id="updatePort" parameterClass="java.util.HashMap">
		update TB_PORT 
			set 
				port_area=#port_area#,
				port_name=#port_name#,
				port_nationality=#port_nationality#,
				area_code=#area_code#
				
			where 
			(
				port_name=#base_port_name#
			)
	</update>
	
		
	<update id="updatePortV1" parameterClass="com.ksg.domain.PortInfo">
