<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="port">
<resultMap id = "portMap" class="com.ksg.domain.PortInfo">
	<result property="port_area" column = "port_area" />
	<result property="port_name" column = "port_name" />
	<result property="port_nationality" column = "port_nationality" />
	<result property="area_code" column = "area_code" />
	<result property="area_code" column = "area_code" />
	<result property="portAbbrList" column="port_name" javaType="java.util.List" select="port.selectPortAbbrListById" />
</resultMap>

<sql id="LIKE_WHERE">
			<dynamic prepend="where">
		    <isNotNull property="port_area" prepend="and">
		        port_area = #port_area#
		    </isNotNull>
		    <isNotNull property="area_code" prepend="and">
		        area_code=#area_code#
		    </isNotNull>
		    <isNotNull property="port_abbr" prepend="and">
		        port_abbr=#port_abbr#
		    </isNotNull>
		    <isNotNull property="port_name" prepend="and">
		        port_name like '%$port_name$%'
		    </isNotNull>
		    <isNotNull property="port_nationality" prepend="and">
		        port_nationality like '%$port_nationality$%'
		    </isNotNull>
		</dynamic>

</sql>	

<!-- select -->

	<select id="selectAll" resultClass="com.ksg.domain.PortInfo">
		SELECT 	* 
		FROM 	TB_PORT
	</select>
	
	<select id="selectPortById" resultClass="com.ksg.domain.PortInfo">
		SELECT 	* 
		FROM 	TB_PORT
		WHERE 	port_name = #port_name# 
	</select>
	
	<select id="selectPortDetailByKey" resultClass="com.ksg.domain.PortInfo" parameterClass="com.ksg.domain.PortInfo">
		SELECT 	* 
		FROM 	TB_PORT_ABBR
		WHERE 	port_name = #port_name#
		AND	  	port_abbr = #port_abbr#
	</select>
	
	<select id="selectPortList" resultClass="java.util.HashMap">
		SELECT 	*, (SELECT COUNT(*) 
		FROM 	TB_PORT_ABBR ABBR 
		WHERE ABBR.port_name=TBL.port_name) ABBR_COUNT FROM TB_PORT TBL
		<include refid="LIKE_WHERE"></include>
	</select>
	
	
	<select id="selectPortListAllByNameList" resultClass="com.ksg.domain.PortInfo">
		SELECT
			* 
		FROM TB_PORT A
		
		WHERE 	port_name in
		<iterate open="(" close=")" conjunction=",">
			#[]#	
		</iterate>
	</select>
	
	<select id="selectPortListByCondition" resultClass="com.ksg.domain.PortInfo">
		SELECT
			*, 
			(	SELECT COUNT(*) 
				FROM TB_PORT_ABBR ABBR 
				WHERE ABBR.port_name=TBL.port_name
			) ABBR_COUNT 
		FROM TB_PORT TBL
		<include refid="LIKE_WHERE"></include>
	</select>
	
	<select id="selectPortListByPage"  resultClass="java.util.HashMap" parameterClass="java.util.HashMap">		
		
		SELECT * FROM ( 
			SELECT ROW_NUMBER() OVER (ORDER BY port_name) AS ROWNUM, *, 
				(SELECT COUNT(*) FROM TB_PORT_ABBR ABBR WHERE ABBR.port_name=TBL.port_name) ABBR_COUNT  FROM TB_PORT TBL
		WITH (NOLOCK) 
		<include refid="LIKE_WHERE"></include>
		 ) T 

		WHERE T.ROWNUM BETWEEN (#PAGE_NO# - 1) * #PAGE_SIZE# + 1 AND #PAGE_NO# * #PAGE_SIZE#
				
	</select>
	
	<select id="selectPortListByLike" resultClass="java.util.HashMap">
		SELECT
				* 
		FROM 	TB_PORT
		<include refid="LIKE_WHERE"></include>
	</select>
	
	<select id="selectPort" resultClass="com.ksg.domain.PortInfo" parameterClass="com.ksg.domain.PortInfo">
		SELECT
				*
		FROM 	TB_PORT
		WHERE 	port_name = #port_name#
	
	</select>
	
	
	<select id="selectPortAbbrListByPortName" resultClass="com.ksg.domain.PortInfo">
		SELECT
		 		* 
		FROM 	TB_PORT_ABBR
		WHERE 	port_name = #port_name#
	</select>
	
	<select id="selectPortDetailListByPortName" resultClass="com.ksg.domain.PortInfo">
		SELECT
		 		* 
		FROM 	TB_PORT_ABBR
		WHERE 	port_name = #port_name#
	</select>
	
	
	
	
	<select id="selectPortDetail" resultClass="com.ksg.domain.PortInfo" parameterClass="com.ksg.domain.PortInfo">
		SELECT 
				* 
		FROM 	TB_PORT_ABBR
		WHERE 	port_name = #port_name#
		AND 	port_abbr= #port_abbr#
	
	</select>
	
	<select id="selectPortAbbr" resultClass="java.util.HashMap">
		SELECT 
				A.port_abbr, 
				B.port_name, 
				B.area_code,
				B.port_area, 
				B.port_nationality 
		FROM 	TB_PORT_ABBR A, TB_PORT B
		WHERE 	A.port_name=B.port_name 
		AND 	A.port_abbr=#port_abbr#
	
	</select>
	
	<select id="selectPortAbbrList" resultClass="java.util.HashMap">
		SELECT 
				* 
		FROM 	TB_PORT_ABBR
		<dynamic prepend="where">
		    <isNotNull property="port_abbr" prepend="and">
		        port_abbr=#port_abbr#
		    </isNotNull>
		    <isNotNull property="port_name" prepend="and">
		        port_name=#port_name#
		    </isNotNull>
 
		</dynamic>
	</select>	

