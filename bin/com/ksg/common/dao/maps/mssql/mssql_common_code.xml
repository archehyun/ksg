<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="code">


<!-- *** Port *** -->
	

<!-- select -->

	<select id="selectCodeHList" resultClass="java.util.HashMap">
	
	
	select CD_ID, CD_NM, CD_ENG from TB_CODE_H

	
	<dynamic prepend="where">
		<isNotNull property="CD_NM" prepend="and">
						CD_NM like '%CD_NM%'
		</isNotNull>
	</dynamic>
	
	</select>
	
	<select id="selectCodeDList" resultClass="java.util.HashMap">
		select * from TB_CODE_INFO
		<dynamic prepend="where">
		    
		    <isNotNull property="code_type" prepend="and">
		        code_type=#code_type#
		    </isNotNull>
		    
		    <isNotNull property="code_name" prepend="and">
		        code_name like '%$code_name$%'
		    </isNotNull>
 
		</dynamic>
	</select>	

<!-- insert -->

	<insert id="insertCode" parameterClass="java.util.HashMap">
		insert into TB_PORT(
			port_area
			port_name,
			port_abbr,
			area_code,
			
		
		)values
		(
			#port_area#
			#port_name#,
			#port_abbr#,
			#area_code#,
		);
	</insert>
	
	<insert id="insertVesselAbbr" parameterClass="java.util.HashMap">
		insert into TB_PORT(
			port_area
			port_name,
			port_abbr,
			area_code,
			
		
		)values
		(
			#port_area#
			#port_name#,
			#port_abbr#,
			#area_code#,
		);
	</insert>
	
<!-- update -->
	
	<update id="updateVesel" parameterClass="java.util.HashMap">
		update TB_PORT 
			set 
				area_code=#area_code#, 
				area_book_code=#area_book_code#, area_name=#area_name#
			where 
			(
				area_name=#base_area_name#
			)
	</update>

<!-- delete -->

	<delete id="deleteCode" parameterClass="java.util.HashMap">
		delete from TB_PORT where port_name=#port_name#
	</delete>
	
	<delete id="deleteVesselAbbr" parameterClass="java.util.HashMap">
		delete from TB_PORT_ABBR where port_abbr=#port_abbr#
	</delete>
	
	
<!-- count -->

	<select id="selectCount" resultClass="int" parameterClass="java.util.HashMap">
		select count(*) from TB_CODE_INFO	
	</select>

<!-- ********************************************* -->	


				
</sqlMap>